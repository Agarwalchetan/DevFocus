# ============================================
# DevFocus Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --------------------------------------------
# MongoDB Configuration
# --------------------------------------------
MONGODB_URI=mongodb://localhost:27017/devfocus
# For production, use MongoDB Atlas or your hosted instance:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/devfocus?retryWrites=true&w=majority

# --------------------------------------------
# JWT Authentication
# --------------------------------------------
# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration (in hours)
JWT_EXPIRATION_HOURS=24

# --------------------------------------------
# Server Configuration
# --------------------------------------------
# Backend server host
HOST=0.0.0.0

# Backend server port
PORT=8001

# Environment mode (development, production)
ENVIRONMENT=development

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Comma-separated list of allowed origins
# For development: http://localhost:3000
# For production: https://yourapp.com,https://www.yourapp.com
CORS_ORIGINS=http://localhost:3000

# --------------------------------------------
# Security Settings
# --------------------------------------------
# Enable/disable debug mode (should be false in production)
DEBUG=false

# Session secret for additional security
SESSION_SECRET=your-session-secret-change-this

# --------------------------------------------
# Frontend Configuration (for backend awareness)
# --------------------------------------------
FRONTEND_URL=http://localhost:3000

# --------------------------------------------
# Optional: Email Configuration (for future features)
# --------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@devfocus.com

# --------------------------------------------
# Optional: Redis Configuration (for caching/sessions)
# --------------------------------------------
# REDIS_URL=redis://localhost:6379

# --------------------------------------------
# Optional: File Upload Configuration
# --------------------------------------------
# MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
# UPLOAD_DIR=./uploads

# --------------------------------------------
# Logging Configuration
# --------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
